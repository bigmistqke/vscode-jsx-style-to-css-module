{
  "publisher": "bigmistqke",
  "name": "jsx-style-to-css-module",
  "displayName": "JSX Style to CSS Module",
  "version": "0.0.7",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "Refactor inline styles to CSS modules",
  "author": "bigmistqke",
  "license": "MIT",
  "homepage": "https://github.com/bigmistqke/vscode-jsx-style-to-css-module#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigmistqke/vscode-jsx-style-to-css-module"
  },
  "bugs": {
    "url": "https://github.com/bigmistqke/vscode-jsx-style-to-css-module/issues"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jsx-style-to-css-module",
        "title": "Extract Inline Styles to CSS Module",
        "category": "Refactor"
      },
      {
        "command": "jsx-style-to-css-module-and-open",
        "title": "Extract Inline Styles to CSS Module and Open File",
        "category": "Refactor"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "JSX Style to CSS Module",
      "properties": {
        "jsx-style-to-css-module.classAttribute": {
          "type": "string",
          "enum": [
            "className",
            "class"
          ],
          "default": "class",
          "description": "The attribute name to use for CSS classes (className for React, class for Solid)"
        },
        "jsx-style-to-css-module.cssPropertyNaming": {
          "type": "string",
          "enum": [
            "kebab-case",
            "camelCase"
          ],
          "default": "kebab-case",
          "description": "The naming convention for CSS properties (kebab-case for standard CSS, camelCase for CSS-in-JS)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build --watch --sourcemap",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm build",
    "release": "bumpp",
    "ext:package": "vsce package --no-dependencies",
    "ext:publish": "vsce publish --no-dependencies && ovsx publish --no-dependencies"
  },
  "dependencies": {
    "@sveltejs/acorn-typescript": "^1.0.7",
    "acorn": "^8.15.0",
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "ovsx": "^0.10.6",
    "pnpm": "^10.22.0",
    "reactive-vscode": "^0.2.22",
    "taze": "^19.9.0",
    "tsdown": "^0.9.9",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.4.0"
  }
}
